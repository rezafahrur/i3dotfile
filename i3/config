# Set shut down, restart and locking features
bindsym $mod+q mode "$mode_system"
set $mode_system (l)ock, (e)xit, (s)hutdown,(r)eboot
mode "$mode_system" {
    #bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym l exec --no-startup-id i3lock-fancy -f ubuntuMono
    bindsym Shift+s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id sudo reboot, mode "default"
    bindsym s exec --no-startup-id sudo shutdown now, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


